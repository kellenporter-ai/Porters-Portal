rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // PUBLIC assets (background video, etc.) — read-only for all authenticated users
    match /public/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }

    // RESOURCES (HTML files, PDFs, supplementals) — admin writes, everyone reads
    match /resources/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }

    // EVIDENCE — students can only read/write to their own folder (10MB max)
    // Upload path is evidence/{userId}/{weekId}/{fileName}
    match /evidence/{userId}/{allPaths=**} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024;
    }

    // LAB SCREENSHOTS — scoped to student (5MB max)
    match /lab_screenshots/{userId}/{fileName} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024;
    }

    // DENY EVERYTHING ELSE
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
